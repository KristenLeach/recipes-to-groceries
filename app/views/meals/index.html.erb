<% if @meals.empty? %>
  <h3>You have not added any recipes to your meal plan!</h3>
<% else %>
  <h3>Your Meals</h3>

  <div class='recipe-container'>

  <% @meals.each do |recipe| %>
    <div class="recipe-card">
      <%= image_tag recipe.image.thumb.url, class: 'recipe-img'%>
      <%= link_to recipe.name, recipe_path(recipe), class:'name' %>
      <p class='description'><%= recipe.description %></p>
      <p class='note'>&#x2605; <%= recipe.meals.last.note %></p>
      <small><%= link_to "Delete", user_meal_path(current_user, recipe.meals.ids), :confirm => "Are you sure?", :method => :delete %></small>
    </div>
  <% end %>

  </div>

  <h3>Grocery List</h3>
  <% @ingredients.each do |ingredient| %>
      <ul>
          <li><%= ingredient %></li>
      </ul>
  <% end %>
<% end %>


