
<h3> Check out these great recipes! </h3>

 <div class='recipe-container'>

<% Recipe.all.each do |recipe| %>
    <div class='recipe-card'>
    <%= image_tag recipe.image.profile.url, class:'recipe-img' %>
    <%= link_to recipe.name, recipe_path(recipe), class:'name' %>
    <p class='description'><%= recipe.description %></p>
    <div class='button'>
    <%= render partial: 'meals/form', locals: {recipe: recipe, current_user: current_user} %>
    </div>
    <%= image_tag recipe.user.image.thumb.url, class:'user-img'%>
    <small class='user-link'><%=link_to recipe.user.name, user_path(recipe.user) %></small>
    </div>
<% end %>

</div>