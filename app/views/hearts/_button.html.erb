<% if current_user.heart?(recipe) %>
  <%= button_to unheart_path(recipe_id: recipe.id), remote: true, method: :delete  do %>
    i class="fas fa-heart"
  <% end %>
<% else %>
  <%= button_to heart_path(recipe_id: recipe.id), remote: true, method: :post do %>
    i class="far fa-heart"
  <% end %>
<% end %>