<% if current_user.heart?(recipe) %>
<%= button_to unheart_path(recipe_id: recipe.id), class: 'unlike', method: :delete do %>
    <i class="fas fa-heart" id="recipe_<%= recipe.id %>"></i>
<% end %>
<% else %>
  <%= button_to heart_path(recipe_id: recipe.id), class: 'like', method: :post do %>
    <i class="far fa-heart" id="recipe_<%= recipe.id %>"></i>
  <% end %>
<% end %>