<% if current_user.heart?(recipe) %>
  <%= button_to '<i class="fas fa-heart"></i>'.html_safe, unheart_path(recipe_id: recipe.id), class: 'liked', method: :delete %>
<% else %>
  <%= button_to '<i class="far fa-heart"></i>'.html_safe, heart_path(recipe_id: recipe.id), class: 'liked', method: :post %>
<% end %>