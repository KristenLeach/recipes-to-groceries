<% if current_user.heart?(recipe) %>
<%= button_to unheart_path(recipe_id: recipe.id), class: 'liked', method: :delete do %>
    <i class="fas fa-heart"></i>
<% end %>
<% else %>
  <%= button_to heart_path(recipe_id: recipe.id), class: 'liked', method: :post do %>
    <i class="far fa-heart"></i>
  <% end %>
<% end %>